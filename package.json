{
  "name": "hase",
  "productName": "HASE",
  "version": "0.0.1",
  "description": "A browser built on web technologies",
  "license": "MIT",
  "repository": "MAPESO/HASE",
  "author": {
    "name": "Markoz Pe√±a Mendez",
    "email": "markdrew53@gmail.com"
  },
  "scripts": {
    "start": "echo 'please run `yarn dev` in one tab and then `yarn app` in another one :)'",
    "app": "electron app",
    "dev": "webpack -w"
  },
  "babel": {
    "presets": [
      "react"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeature": {
        "jsx": true,
        "impliedStrict": true,
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "rules": {
      "no-shadow": "error",
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-no-target-blank": 0,
      "react/no-string-refs": 0,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "useTabs": false,
          "tabWidth": 2,
          "printWidth": 120,
          "bracketSpacing": false,
          "jsxBracketSameLine": false
        }
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.8.2",
    "electron-is-dev": "^0.3.0",
    "electron-reloader": "^0.2.0",
    "electron-timber": "^0.3.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "prettier": "^1.10.2",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.9"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
